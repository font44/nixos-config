{
  "$schema": "https://charm.land/crush.json",
  "mcp": {
    "fetch": {
      "type": "stdio",
      "command": "podman",
      "args": ["run", "-i", "--rm", "mcp/fetch"]
    },
    "puppeteer": {
      "type": "stdio",
      "command": "podman",
      "args": ["run", "-i", "--rm", "--init", "-e", "DOCKER_CONTAINER=true", "--net", "host", "mcp/puppeteer"]
    },
    "context7": {
      "type": "http",
      "url": "https://mcp.context7.com/mcp"
    }
  },
  "providers": {
    "openrouter": {
      "name": "OpenRouter",
      "id": "openrouter",
      "api_key": "$DEV_API_KEY_FOR_OPEN_ROUTER",
      "base_url": "https://openrouter.ai/api/v1",
      "type": "openai"
    }
  }
}